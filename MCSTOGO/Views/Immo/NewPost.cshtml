@model MCSTOGO.Models.PostInputModel

@{
    ViewBag.Title = "Ajouter un nouvel article";
    Layout = "_MKL";
}

<h2>Ajouter un nouvel article</h2>


<div class="d-flex justify-content-center align-items-center">


    <form enctype="multipart/form-data" asp-action="NewPost">

        <div class="card add-post-card">
            <div class="d-flex justify-content-center align-items-center">
                <i class="fa fa-home" style="    font-size: 45px;
                    color: #9c27b0;"></i>

            </div>
            <div class="d-flex justify-content-center align-items-center">
                <p style="font-size: 24px;
                    font-weight: 700;
                    padding-bottom: 10px;
                    color: grey;">Ajouter un noveau post</p>
            </div>

            <div class="form-group">
                <select class="form-control" asp-for="TypeContrat"
                        asp-items='new List<SelectListItem>() {new SelectListItem("Vente", "Vente"),new SelectListItem("Bail", "Bail"), new SelectListItem("Location", "Location")}'>
                </select>
                <span asp-validation-for="TypeContrat"></span>
            </div>
            <div class="form-group">

                <label asp-for="NomPost"></label>
                <input asp-for="NomPost" class="form-control" id="postNom">
                <span asp-validation-for="NomPost" class="text-danger"></span>
                <!-- <small id="postPrix" class="form-text text-muted">Entrer le prix du post</small> -->
            </div>
            <div class="form-group">
                <label asp-for="Prix"></label>
                <input type="text" class="form-control" asp-for="Prix">
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lieu"></label>
                <input type="text" class="form-control" asp-for="Lieu">
                <span asp-validation-for="Lieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>


            <div class="form-group">
                <label asp-for="Photo1" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Photo1" class="custom-file-input" id="p1Id">
                    <label class="custom-file-label" for="p1Id">Choose file</label>
                </div>
                <span asp-validation-for="Photo1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo2" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Photo2" class="custom-file-input" id="p2Id">
                    <label class="custom-file-label" for="p2Id">Choose file</label>
                </div>
                <span asp-validation-for="Photo2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-round"/>
                @* <a asp-action="AddPost"></a> *@
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script type="text/javascript">  
        // Add the following code if you want the name of the file appear on select  
        $("#p1Id").on("change", function () {  
            var fileName = $(this).val().split("\\").pop();  
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
        });  
        $("#p2Id").on("change", function () {  
            var fileName = $(this).val().split("\\").pop();  
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
        });  
    </script>
}